.text-center
  %h1 Welcome!

  = show_success_message
  = show_error_message

  %form.spacer{ method: "post", role: "form" }
    .form-group
      %label{ for: "username" } Username:
      .col-xs-3.centered
        %input.form-control{ id: "username", type: "text", name: "username" }
    .form-group
      %label Password:
      .col-xs-3.centered
        %input.form-control{ type: "password", name: "password" }
    %button.btn.btn-default{ type: "submit" } Login

  %p.spacer
    Still don't have an account?
    %a{ href: "/user/register" } Register
    now!
